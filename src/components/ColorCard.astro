---
export interface Props {
	title: string;
	body: string;
	href: string;
  color: string;
}

const { href, title, body, color } = Astro.props;
---

<li class="card">
	<a href={href}>
		<h2>
			{title}
			<span>&rarr;</span>
		</h2>
		<p>
			{body}
		</p>
	</a>
</li>

<style define:vars={{ color }}>

:root {
	--border: rgb(3, 169, 244);
  --primary-color: mediumslateblue;
}
	
.card {

    display: flex;
    position: relative;
    height: 200px;
    width: 450px;
    background-color: var(--color);

    margin: 10px;
    border-radius: 1ch;
    text-align: center;
    align-items: center;
    }

.card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: 0.8rem 0.8rem;
    border-radius: 0.35rem;
    color: #FFF;
    opacity: 0.8;
}
h2 {
    margin: 0;
    font-size: 1.25rem;
}
p {
    margin-top: 0.5rem;
    margin-bottom: 0;
    color: #FFF;
}
.card:after {  
  content: "";
  height: 75px;
  width: 2px;  
  position: absolute;  
  left: -1px;
  top: 65%;
  transition: top, opacity;
  transition-duration: 600ms;
  transition-timing-function: ease;
  background: linear-gradient(
    transparent,
    var(--primary-color),
    transparent
  );
  opacity: 0;
}

.card:after {  
  top: 65%;
  opacity: 0;
}

.card:hover:after {
  top: 8%;
  opacity: 1;
}
</style>