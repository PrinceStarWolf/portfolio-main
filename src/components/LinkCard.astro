---
export interface Props {
	title: string;
	href: string;
}

const { href, title } = Astro.props;
---

<li class="card">
	<a href={href} target="_blank">
		<h2>
			{title}
			<span>&rarr;</span>
		</h2>
	</a>
</li>

<style>

:root {
	--border: rgb(3, 169, 244);
    --primary-color: mediumslateblue;
}
	
.card {

    display: flex;
    position: relative;
    height: 50px;
    width: 280px;
    margin-top: 10px;
    margin-bottom: 10px;
    margin-left: auto;
    margin-right: auto;
    background-color: #0f0f0f;
    border-radius: 1ch;
    text-align: center;
    transition: all .2s ease-in-out; 
}

.card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: 0.8rem 0.8rem;
    border-radius: 0.35rem;
    color: #FFF;
    opacity: 0.8;
}


.card:hover { 
    background-color: aqua;
}

h2 {
    margin: 0;
    font-size: 1.25rem;
}
p {
    margin-top: 0.5rem;
    margin-bottom: 0;
    color: #FFF;
}
</style>